﻿<@flayout.myLayout "添加评论"> 
<div>
<FORM onsubmit="return checkForm();" method=post 
            name=product_reviews_write 
            action=${base}/front/addCart.action?glassesId=${glassesId}>
<TABLE border=0 cellSpacing=0 cellPadding=0>
	<TBODY>
		<TR>
			<TD style="BORDER-RIGHT: #ffffff 4px solid">
			<TABLE
				style="BORDER-BOTTOM: #b6b6b6 0px solid; BORDER-LEFT: #b6b6b6 1px solid; BORDER-TOP: #b6b6b6 0px solid; BORDER-RIGHT: #b6b6b6 1px solid"
				border=0 cellSpacing=0 cellPadding=0>
				<TBODY>
					<TR>
						<TD
							style="BORDER-BOTTOM: #ffffff 10px solid; BORDER-LEFT: #ffffff 7px solid; BORDER-TOP: #ffffff 10px solid; BORDER-RIGHT: #ffffff 7px solid">
						<TABLE border=0 cellSpacing=0 cellPadding=2 width="100%">
							<TBODY>
								<TR>
									<TD vAlign=top>
									<TABLE border=0 cellSpacing=0 cellPadding=2 width="100%">
										<TBODY>
											<TR>
												<TD class=main><B>收藏人：</B>${userName}</TD>
											</TR>
											<TR>
												<TD class=main><B>你要收藏的宝贝:</B></TD>
											</TR>
											<TR>
												<TD>
												<TABLE class=product border=0 cellSpacing=0 cellPadding=2
													align=center>
													<TBODY>
														<TR>
															<TD align=middle>
															<TABLE border=0 cellSpacing=0 cellPadding=0>
																<TBODY>
																	<TR>
																		<TD class=pic align=middle><BR
																			style="LINE-HEIGHT: 1px">
																		<BR style="LINE-HEIGHT: 5px">
																		<TABLE class="table_pic_width" border=0
																			cellSpacing=0 cellPadding=0>
																			<TBODY>
																				<TR>
																					<TD class=image>
																					<A
																						href="${base}/images/glasses/${picture}" target=_blank><IMG
																						title="${glassesName}" border=0 hspace=0
																						alt="${glassesName}" src="${base}/images/glasses/${picture}"
																						width=80 height=85></A>
																					</TD>
																				</TR>
																			</TBODY>
																		</TABLE>
																		<BR style="LINE-HEIGHT: 1px">
																		<BR style="LINE-HEIGHT: 15px">
																		</TD>
																	</TR>
																</TBODY>
															</TABLE>
															</TD>
															<TD width=30></TD>
														</TR>
													</TBODY>
												</TABLE>
												<TABLE class=pic_2 border=0 cellSpacing=0 cellPadding=0>
													<TBODY>
														<TR>
															<TD class=image>
															<TABLE border=0 cellSpacing=2 cellPadding=2 width="100%">
																<TBODY>
																	<TR>
																		<TD class=main><TEXTAREA rows=15 cols=60
																			name=comment></TEXTAREA></TD>
																	</TR>

																	<TR>
																		<TD class=main><B>喜爱程度:</B> <SMALL><FONT
																			color=#ff0000><B>差</B></FONT></SMALL> <INPUT
																			style="BACKGROUND: none transparent scroll repeat 0% 0%"
																			value=1 type=radio name=starValue> <INPUT
																			style="BACKGROUND: none transparent scroll repeat 0% 0%"
																			value=2 type=radio name=starValue> <INPUT
																			style="BACKGROUND: none transparent scroll repeat 0% 0%"
																			value=3 type=radio name=starValue> <INPUT
																			style="BACKGROUND: none transparent scroll repeat 0% 0%"
																			value=4 type=radio name=starValue> <INPUT
																			style="BACKGROUND: none transparent scroll repeat 0% 0%"
																			value=5 type=radio name=starValue> <SMALL><FONT
																			color=#ff0000><B>好</B></FONT></SMALL></TD>
																	</TR>
																</TBODY>
															</TABLE>
															</TD>
														</TR>
													</TBODY>
												</TABLE>
												</TD>
											</TR>
											<TR>
												<TD><IMG border=0 alt=""
													src="${base}/images/pixel_trans.gif" width="100%"
													height=10></TD>
											</TR>
											<TR>
												<TD>
												<TABLE border=0 cellSpacing=0 cellPadding=2 width="100%">
													<TBODY>
														<TR>
															<TD width=10><IMG border=0 alt=""
																src="${base}/images/pixel_trans.gif" width=10 height=1></TD>
															<TD class=main><A
																href="${base}/front/detail.action?id=${glassesId}"><IMG
																title=" Back " border=0 alt=Back
																src="${base}/images/button_back.gif" width=86
																height=23></A></TD>
															<TD class=main align=right><INPUT title=" Continue "
																border=0 alt=Continue
																src="${base}/images/button_continue1.gif" type=image></TD>
															<TD width=10><IMG border=0 alt=""
																src="${base}/images/pixel_trans.gif" width=10 height=1></TD>
														</TR>
													</TBODY>
												</TABLE>
												</TD>
											</TR>
										</TBODY>
									</TABLE>
									</TD>
								</TR>
							</TBODY>
						</TABLE>
						</TD>
					</TR>
					</TD>
					</TR>
				</TBODY>
			</TABLE>
			</TD>
		</TR>
		<TR>
			<TD><IMG border=0 alt="" src="${base}/images/m30.gif"
				width=438 height=7></TD>
		</TR>
	</TBODY>
</TABLE>
</FORM>
</div>
</@flayout.myLayout> 